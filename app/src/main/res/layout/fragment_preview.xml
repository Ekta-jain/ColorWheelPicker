<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="com.e4ekta.colorpickerwheel.gradientseekbar.GradientSeekBarKt" />

        <variable
            name="viewModel"
            type="com.e4ekta.colorwheelpicker.PreviewViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.e4ekta.colorpickerwheel.gradientseekbar.GradientSeekBar
            android:id="@+id/gradientSeekBar"
            alphaListener="@{(alpha) -> viewModel.onColorChanged(valueSeekBar.getArgb(), alpha)}"
            transparentToColor="@{colorWheel.rgb}"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.55"
            app:layout_constraintStart_toEndOf="@id/colorWheel"
            app:layout_constraintTop_toTopOf="parent" />

        <com.e4ekta.colorpickerwheel.ColorWheel
            android:id="@+id/colorWheel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="@id/gradientSeekBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/gradientSeekBar"
            app:layout_constraintWidth_percent="0.8" />

        <View
            android:id="@+id/colorIndicator"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:layout_marginEnd="16dp"
            android:background="@android:color/black"
            app:layout_constraintBottom_toTopOf="@id/colorWheel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/segmentOne"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="@id/colorIndicator"
            android:background="@drawable/solid_circle_drawable"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/colorIndicator" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/segmentTwo"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_10sdp"
            android:backgroundTint="@color/segment_two"
            app:layout_constraintBottom_toBottomOf="@id/colorIndicator"
            android:background="@drawable/solid_circle_drawable"
            app:layout_constraintStart_toEndOf="@id/segmentOne"
            app:layout_constraintTop_toTopOf="@id/colorIndicator" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/segmentThree"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="@id/colorIndicator"
            android:backgroundTint="@color/segment_three"
            android:background="@drawable/solid_circle_drawable"
            app:layout_constraintStart_toEndOf="@id/segmentTwo"
            app:layout_constraintTop_toTopOf="@id/colorIndicator" />


        <com.e4ekta.colorpickerwheel.gradientseekbar.GradientSeekBar
            android:id="@+id/valueSeekBar"
            blackToColor="@{colorWheel.rgb}"
            colorListener="@{(color) -> viewModel.onColorChanged(color, GradientSeekBarKt.getCurrentColorAlpha(gradientSeekBar))}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:gsb_orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/colorWheel"
            app:layout_constraintStart_toStartOf="@id/colorWheel"
            app:layout_constraintTop_toBottomOf="@id/colorWheel" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>